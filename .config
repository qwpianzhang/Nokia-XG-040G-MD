# 1. 目标硬件架构 (核心)
CONFIG_TARGET_airoha=y
CONFIG_TARGET_airoha_an7581=y
CONFIG_TARGET_airoha_an7581_DEVICE_nokia_xg-040g-md=y

# 2. 基础管理界面与应用商店
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-store=y
CONFIG_PACKAGE_luci-app-ttyd=y

# 3. 国际网络 (SSR-plus/Passwall/Clash)
# 建议选择一个，这里默认包含主流的 SSR-Plus
CONFIG_PACKAGE_luci-app-ssr-plus=y

# 4. 网络加速 (硬件转发) - AN7581 必选
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_OFFLOADING=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_BBR_CCA=y

# 5. 多线多拨、负载均衡与端口转发
CONFIG_PACKAGE_luci-app-mwan3=y
CONFIG_PACKAGE_luci-app-mwan3helper=y
CONFIG_PACKAGE_luci-app-upnp=y

# 6. IPTV 与 组播/广播支持
CONFIG_PACKAGE_luci-app-omcproxy=y
CONFIG_PACKAGE_luci-app-udpxy=y

# 7. 其他常用工具
CONFIG_PACKAGE_luci-app-arpbind=y
CONFIG_PACKAGE_luci-app-autotimeset=y
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-ramfree=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y

# 8. 终端与底层支持
CONFIG_PACKAGE_kmod-airoha-en7581-npu-firmware=y
CONFIG_PACKAGE_kmod-mt798x-wmcu-firmware=y
